@model IEnumerable<MVC_ETTY_REVISE.Models.Customer>

@{
    ViewData["Title"] = "CustomerList";
}

<h1>CustomerList</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.C_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.C_Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.C_Mobile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.C_Gender)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.C_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.C_Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.C_Mobile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.C_Gender)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
